  </head>

  <body>

  <section id="container" >
      <!-- header -->
      <%- include ("partials/header.ejs") %>

      <!-- sidebar -->
      <aside>
        <div id="sidebar"  class="nav-collapse ">
            <ul class="sidebar-menu" id="nav-accordion">
        
                  <p class="centered"><a href="#"><img src="/assets/img/ui-sam.jpg" class="img-circle" width="60"></a></p>
                  <h5 class="centered">session</h5>
        
                <li class="sub-menu">
                    <a href="/admin/home" >
                        <i class="fa fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
        
        <li class="nav-item">
        <a class="nav-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
          <i class="fa fa-cog"></i>
          <span>Add Property</span>
        </a>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
          <div class="bg-white py-2 collapse-inner rounded">
            <a class="collapse-item" href="/admin/add-house">Add House</a>
            <a class="collapse-item" href="/admin/add-land">Add Land</a>
            <a class="collapse-item" href="/admin/add-motor">Add Motor</a>
        
          </div>
        </div>
        </li>
    
            <li class="sub-menu">
              <a href="/admin/manage-houses" >
                  <i class="fa fa-users"></i>
                  <span>Manage Houses</span>
              </a>
            </li>
            <li class="sub-menu">
              <a href="/admin/manage-lands" >
                  <i class="fa fa-users"></i>
                  <span>Manage Lands</span>
              </a>
            </li>
            <li class="sub-menu">
              <a href="/admin/manage-motors" >
                  <i class="fa fa-users"></i>
                  <span>Manage Motors</span>
              </a>
            </li>
    
                <li class="sub-menu">
                    <a href="/admin/manage-orders" >
                        <i class="fa fa-users"></i>
                        <span>Manage Orders</span>
                    </a>
                </li>
    
                <li class="sub-menu">
                    <a href="/admin/view-sales" >
                        <i class="fa fa-users"></i>
                        <span>View Sales</span>
                    </a>
        
                </li>
                <li class="sub-menu">
                    <a href="/admin/contact" >
                        <i class="fa fa-users"></i>
                        <span>Contact Page</span>
                    </a>
        
                </li>
            </ul>
        </div>
    </aside>

      <section id="main-content">
          <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Admin Edit</h3>

            <form action="/admin/motor/<%= motor.id %>/edit" method="POST">
              <div class="form-group">
                <label>Property Title</label>
                <input type="text" class="form-control" name="title" placeholder="Title" value="<%= motor.title %>">
              </div>
              
              
              <div class="row">
                <div class="col-lg-6">
                <div class="form-group">
                  <a href="/uploads/<%= motor.filename %>"><img src="/uploads/<%= motor.filename%>"  width="100%" height="300px" ></a>
                </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label>Size</label>
                    <input type="text" class="form-control" name="size" placeholder="size" value="<%= motor.size %>">
                  </div>
                  <div class="form-group">
                    <label>Price</label>
                    <input type="text" class="form-control" name="price" placeholder="price" value="<%= motor.price %>">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label>Description</label>
                <textarea name="description" class="form-control"> <%= motor.description %> </textarea>
              </div>
              <input type="submit" class="btn btn-success" value="Publish">
            </form>
            
		</section>
      </section
  ></section>
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/assets/js/jquery.scrollTo.min.js"></script>
    <script src="/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/assets/js/common-scripts.js"></script>
  <script>
      $(function(){
          $('select.styled').customSelect();
      });

  </script>

  </body>
</html>
