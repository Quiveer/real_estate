<html lang="en">
  <head>

    <title>Admin | Admin Home</title>
    <%- include ("partials/head.ejs") %>

  </head>

  <body>

  <section id="container" >
      <!-- header -->
      <%- include ("partials/header.ejs") %>

      <!-- sidebar -->
      <%- include ("partials/sidebar.ejs") %>

      <section id="main-content">
          <section class="wrapper">


        <div class="row">



                  <div class="col-md-12">
                      <div class="content-panel">
                        <% allMessages.forEach(function(message) { %>

                            <b>Message : </b> <%= message.message %>
                          <div class="row">
                            <div class="col-lg-4"><b>Name : </b><%= message.username %></div>
                            <div class="col-lg-4"><b>Email : </b><a href="mailto:<%= message.email %>"><%= message.email %></a></div>
                            <div class="col-lg-4"><b>Phone : </b><a href="tel:<%= message.phone %>"><%= message.phone %></a></div>
                          </div>
                          <div class="row">
                            <div class="col-lg-6"><i> <%= message.date.toDateString() %></i></div>
                            <div class="col-lg-6"><a href="/admin/contact/<%= message._id%>/delete" style="float: right;" class="btn btn-danger">Delete</a></div>
                          </div>
                          <hr>
                          <% }); %>
                      </div>
                  </div>
              </div>
    </section>
      </section></section>
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/assets/js/jquery.scrollTo.min.js"></script>
    <script src="/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/assets/js/common-scripts.js"></script>
  <script>
      $(function(){
          $('select.styled').customSelect();
      });

  </script>

  </body>
</html>
