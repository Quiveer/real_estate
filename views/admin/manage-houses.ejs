<html lang="en">
  <head>

    <title>Admin | Manage Houses </title>
    <%- include ("partials/head.ejs") %>

  </head>

  <body>

  <section id="container" >
      <!-- header -->
      <%- include ("partials/header.ejs") %>

      <!-- sidebar -->
      <%- include ("partials/sidebar.ejs") %>

  <section id="main-content">
    <section class="wrapper">
          	<h3><i class="fa fa-angle-right"></i> Admin Manage Houses</h3>

                    <table class="table table-striped table-hover">
                      <thead>
                          <tr>
                            <th>House Title</th>
                            <th>Uploaded</th>
                            <th>Location</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody>
                            <% allHouses.forEach(function(item) { %>
                              <tr>
                              <td><%= item.title %></td>
                              <td><%= item.date.toDateString() %></td>
                              <td><%= item.location %></td>
                              <td><%= item.price %></td>
                              <td><%= item.category %></td>
                              <td><a href="/admin/house/<%= item.id %>/edit" class="btn btn-default">edit</a> <a href="/admin/house/<%= item.id %>/delete" class="btn btn-danger">Delete</a></td>    
                              </tr>
                            <% }); %>
                        </tbody>
                        </table>
		</section>
  </section
  ></section>
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/assets/js/jquery.scrollTo.min.js"></script>
    <script src="/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/assets/js/common-scripts.js"></script>
  <script>
      $(function(){
          $('select.styled').customSelect();
      });

  </script>

  </body>
</html>

