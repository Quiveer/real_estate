<html lang="en">
  <head>

    <title>Admin | Admin Home</title>
    <%- include ("partials/head.ejs") %>

  </head>

  <body>

  <section id="container" >
      <!-- header -->
      <%- include ("partials/header.ejs") %>

      <!-- sidebar -->
      <%- include ("partials/sidebar.ejs") %>

      <section id="main-content">
          <section class="wrapper">
          	<h3><i class="fa fa-angle-right"></i> Admin Home</h3>


            <div>
              <table class="table table-striped table-hover">
                  <thead>
                      <tr>
                        <th>Property</th>
                        <th>Price</th>
                        <th>Customer</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Date</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                        <% allSales.forEach(function(sale) { %>
                            <tr>
                            <td><%= sale.title %></td>
                            <td><%= sale.price %></td>
                            <td><%= sale.username %></td>
                            <td><%= sale.email %></td>
                            <td><%= sale.phone %></td>
                            <td><%= sale.date.toDateString("en-us", { month: "long" }) %></td>
                            <td><a href="/admin/sale/<%= sale.id %>/delete" class="btn btn-danger">Delete</a></td>    
                            </tr>
                        <% }); %>
                    </tbody>
              </table>
            </div>
		</section>
      </section
  ></section>
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/assets/js/jquery.scrollTo.min.js"></script>
    <script src="/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/assets/js/common-scripts.js"></script>
  <script>
      $(function(){
          $('select.styled').customSelect();
      });

  </script>

  </body>
</html>
