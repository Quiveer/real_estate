<html lang="en">
  <head>

    <title>Admin | Admin Home</title>
    <%- include ("partials/head.ejs") %>

  </head>

  <body>

  <section id="container" >
      <!-- header -->
      <%- include ("partials/header.ejs") %>

      <!-- sidebar -->
      <%- include ("partials/sidebar.ejs") %>

      <section id="main-content">
          <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Admin Edit</h3>

            <form action="/admin/house/<%= house.id %>/edit" method="POST">
              <div class="form-group">
                <label>Property Title</label>
                <input type="text" class="form-control" name="title" placeholder="Title" value="<%= house.title %>" required>
              </div>
              
              
              <div class="row">
                <div class="col-lg-6">
                <div class="form-group">
                  <a href="/uploads/<%= house.filename %>"><img src="/uploads/<%= house.filename%>"  width="100%" height="300px" ></a>
                </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label>Bedroom</label>
                        <select name="bedroom" class="form-control" required>
                          <option value="<%= house.bedroom %>" selected disabled><%= house.bedroom %></option>
                          <option value="1">1</option>
                          <option value="2">2</option>
                          <option value="3">3</option>
                        </select>
                  </div>
                  <div class="form-group">
                    <label>Bathroom</label>
                        <select name="bathroom" class="form-control" required>
                          <option value="<%= house.bathroom %>" selected disabled><%= house.bathroom %></option>
                          <option value="1">1</option>
                          <option value="2">2</option>
                          <option value="3">3</option>
                        </select>
                  </div>
                  <div class="form-group">
                    <label>Location</label>
                    <input type="text" class="form-control" name="location" value="<%= house.location %>" required>
                  </div>
                  <div class="form-group">
                    <label>Size</label>
                    <input type="text" class="form-control" name="size" value="<%= house.size %>" required>
                  </div>
                  <div class="form-group">
                    <label>Price</label>
                    <input type="text" class="form-control" name="price" value="<%= house.price %>" required>
                  </div>
              </div>
              </div>
              <div class="form-group">
                <label>Description</label>
                <textarea name="description" class="form-control" required> <%= house.description %> </textarea>
              </div>
              <input type="submit" class="btn btn-success" value="Publish">
            </form>
            
		</section>
      </section
  ></section>
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/assets/js/jquery.scrollTo.min.js"></script>
    <script src="/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/assets/js/common-scripts.js"></script>
  <script>
      $(function(){
          $('select.styled').customSelect();
      });

  </script>

  </body>
</html>
