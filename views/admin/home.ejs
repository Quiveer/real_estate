<!DOCTYPE html>
<html lang="en">
  <head>

    <title>Admin | Admin Home</title>
    <%- include ("partials/head.ejs") %>

  </head>

  <body>

  <section id="container" >
      <!-- header -->
      <%- include ("partials/header.ejs") %>

      <!-- sidebar -->
      <%- include ("partials/sidebar.ejs") %>
     
  <section id="main-content">
    <section class="wrapper">
          	<h3><i class="fa fa-angle-right"></i> Admin Home</h3>


          <div class="row1">
            <div class="column1">
            <div class="card">
            <h3>Total Number of Tenants:</h3>
            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
            </div>
            </div>

            <div class="column1">
            <div class="card">
            <h3>Total Number of Houses Occupied:</h3>
            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
            <p>Some text</p>
            <p>Some text</p>
            </div>
            </div>

            <div class="column1">
            <div class="card">
            <h3>Total Income:</h3>
            <i class='fa fa-money-check' style='font-size:48px;color:red'></i>
            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
            
            </div>
            </div>

            <div class="column1">
            <div class="card">
            <h3>Total Orders</h3>
            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
            
            </div>
            </div>
        </div>
    </section>
    <div class="container-fluid">
      <h3 style="text-align: center;">Client's Review</h3>
      <form action="/addreview" method="POST">
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Title</span>
          <input type="text" name="title" class="form-control" placeholder="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Review</span>
          <input type="text" name="review" class="form-control" placeholder="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">Name</span>
          <input type="text" name="customerName" class="form-control" placeholder="name" aria-describedby="basic-addon1">
        </div><br>
        <input type="submit" value="Add Review" class="btn btn-primary">
      </form>

      <h3 style="text-align: center;">Reviews (Max: 3)</h3>
      <% allReviews.forEach(function(review) { %>
      <div class="row">
        <div class="col-lg-3"><%= review.title %></div>
        <div class="col-lg-3"><%= review.review %></div>
        <div class="col-lg-3"><%= review.customerName %></div>
        <div class="col-lg-3"><a href="/admin/review/<%= review.id %>/delete" class="btn btn-danger">Delete</a></div>
      </div><hr>
      <% }); %>
    </div>
  </section>

</section>
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/assets/js/jquery.scrollTo.min.js"></script>
    <script src="/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/assets/js/common-scripts.js"></script>
  <script>
      $(function(){
          $('select.styled').customSelect();
      });

  </script>

  </body>
</html>