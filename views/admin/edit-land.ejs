<html lang="en">
  <head>

    <title>Admin | Admin Home</title>
    <%- include ("partials/head.ejs") %>

  </head>

  <body>

  <section id="container" >
      <!-- header -->
      <%- include ("partials/header.ejs") %>

      <!-- sidebar -->
      <%- include ("partials/sidebar.ejs") %>

      <section id="main-content">
          <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Admin Edit</h3>

            <form action="/admin/land/<%= land.id %>/edit" method="POST">
              <div class="form-group">
                <label>Land Title</label>
                <input type="text" class="form-control" name="title" placeholder="Title" value="<%= land.title %>">
              </div>
              
              
              <div class="row">
                <div class="col-lg-6">
                <div class="form-group">
                  <a href="/uploads/<%= land.filename %>"><img src="/uploads/<%= land.filename%>"  width="100%" height="300px" ></a>
                </div>
                </div>
                <div class="col-lg-6">
                  <div class="form-group">
                    <label>Location</label>
                    <input type="text" class="form-control" name="location" placeholder="location" value="<%= land.location %>">
                  </div>
                  <div class="form-group">
                    <label>Size</label>
                    <input type="text" class="form-control" name="size" placeholder="size" value="<%= land.size %>">
                  </div>
                  <div class="form-group">
                    <label>Price</label>
                    <input type="text" class="form-control" name="price" placeholder="price" value="<%= land.price %>">
                  </div>
              </div>
              </div>
              <div class="form-group">
                <label>Description</label>
                <textarea name="description" class="form-control"> <%= land.description %> </textarea>
              </div>
              <input type="submit" class="btn btn-success" value="Edit">
            </form>
            
		</section>
      </section
  ></section>
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/assets/js/jquery.scrollTo.min.js"></script>
    <script src="/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/assets/js/common-scripts.js"></script>
  <script>
      $(function(){
          $('select.styled').customSelect();
      });

  </script>

  </body>
</html>
