<html lang="en">
  <head>

    <title>Admin | Admin Home</title>
    <%- include ("partials/head.ejs") %>

  </head>

  <body>

  <section id="container" >
      <!-- header -->
      <%- include ("partials/header.ejs") %>

      <!-- sidebar -->
      <%- include ("partials/sidebar.ejs") %>

      <section id="main-content">
        <section class="wrapper">
          <h3><i class="fa fa-angle-right"></i> Admin Manage Orders</h3>

          <% var total_orders = 0; %>
					<% for (let i=0; i < allOrders.length; i++) { %>
							<% total_orders++; %>
					<% } %>
											
          <h3>Total Orders: <%= total_orders %></h3>

          <div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Phone</th>
                      <th>Property</th>
                      <th>Price</th>
                      <th>Date</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                      <% allOrders.forEach(function(order) { %>
                          <tr>
                          <td><%= order.username %></td>
                          <td><%= order.email %></td>
                          <td><%= order.phone %></td>
                          <td><a href="/admin/<%= order.propertyId %>/view-property"><%= order.title %></a></td>
                          <td><%= order.price %></td>
                          <td><%= order.date.toDateString("en-us", { month: "long" }) %></td>
                          <td><a href="/admin/property/<%= order.propertyId %>/sold" class="btn btn-success">sold</a> <a href="/admin/order/<%= order.id %>/delete" class="btn btn-danger">Delete</a></td>    
                          </tr>
                      <% }); %>
                  </tbody>
            </table>
          </div>
  </section>
      </section
  ></section>
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/assets/js/jquery.scrollTo.min.js"></script>
    <script src="/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/assets/js/common-scripts.js"></script>
  <script>
      $(function(){
          $('select.styled').customSelect();
      });

  </script>

  </body>
</html>
